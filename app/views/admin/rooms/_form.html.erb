<%= form_for [:admin, room], class: 'form-horizontal' do |f| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'スタジオ', class: 'control-label' %>
    <%= f.select :studio_id, Studio.all.map{ |s| [s.name, s.id]}, {prompt: 'スタジオを選択する'}, class: 'form-control' %>
  </div>

  <div class="from-group">
    <%= f.label 'ルーム名', class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: '604' %>
  </div>

  <div class="form-group">
    <%= f.label '広さ(㎡)', class: 'control-label' %>
    <%= f.number_field :size, class: 'form-control', placeholder: '52' %>
  </div>

  <div class="form-group">
    <%= f.label '人数', class: 'control-label' %>
    <%= f.number_field :capacity, class: 'form-control', placeholder: '10' %>
  </div>

  <div class="form-group">
    <%= f.label '料金(円/時間)', class: 'control-label' %>
    <%= f.number_field :price, class: 'form-control', placeholder: '3000' %>
  </div>

  <div class="form-group">
    <%= f.label '鏡', class: 'control-label' %>
    <%= f.text_field :mirror, class: 'form-control', placeholder: '2面' %>
  </div>

  <div class="form-group">
    <%= f.label '床材', class: 'control-label' %>
    <%= f.select :floor, Room.floors.keys.to_a, {prompt: '床材を選択する'}, class: 'form-control' %>
  </div>

  <div class="form-group">
    音響
    <table class="table">
      <tr>
        <td>スピーカー</td>
        <td><%= f.check_box :speaker, class: 'checkbox' %></td>
        <td>ミキサー</td>
        <td><%= f.check_box :mixer, class: 'checkbox' %></td>
      </tr>
      <tr>
        <td>CD</td>
        <td><%= f.check_box :cd, class: 'checkbox' %></td>
        <td>MP3</td>
        <td><%= f.check_box :mp3, class: 'checkbox' %></td>
      </tr>
      <tr>
        <td colspan="6"><%= f.label 'その他音源', class: 'control-label' %></td>
      </tr>
      <tr>
        <td colspan="6"><%= f.text_field :other_source, class: 'form-control', placeholder: 'iPod' %></td>
      </tr>
    </table>
  </div>

  <div class="form-group">
    その他
    <table class="table">
      <tr>
        <td>調光</td>
        <td><%= f.check_box :dimmable, class: 'checkbox' %></td>
        <td>Wi-Fi</td>
        <td><%= f.check_box :wifi, class: 'checkbox' %></td>
      </tr>
    </table>
  </div>

  <div class="form-group">
    <%= f.label '特徴', class: 'control-label' %>
    <%= f.text_area :feature, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label '備考', class: 'control-label' %>
    <%= f.text_area :remarks, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'ステータス', class: 'control-label' %>
    <%= f.select :status, Room.statuses.keys.to_a, {}, prompt: @room.status, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label '事務局メモ', class: 'control-label' %>
    <%= f.text_area :memo, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
